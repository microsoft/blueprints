{
  "name": "arbutus",
  "description": "Documentation site UI library",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/arbutus.git"
  },
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "components/*",
    "content/*",
    "hooks/*",
    "styles/*",
    "utilities/*"
  ],
  "scripts": {
    "beachball:bump": "beachball bump",
    "beachball:check": "beachball check",
    "beachball:publish": "beachball publish --access=public --new",
    "build:docs": "npm run build -w=utilities/docs",
    "build:packages": "lage build",
    "build:storybook": "storybook build -o docs",
    "change": "beachball change",
    "copy-docs": "node scripts/update-docs.js",
    "update-docs": "run-s build:docs copy-docs",
    "g:component": "run-s hygen:component syncpack:fix i",
    "g:hook": "run-s hygen:hook syncpack:fix i",
    "g:utility": "run-s hygen:utility syncpack:fix i",
    "hygen:component": "hygen new component",
    "hygen:hook": "hygen new hook",
    "hygen:utility": "hygen new utility",
    "i": "npm i",
    "lint:eslint": "eslint . --fix",
    "lint:prettier": "prettier --write .",
    "lint:root": "run-s lint:eslint lint:prettier",
    "lint:staged": "lint-staged",
    "lint": "lage lint",
    "pr:check": "run-s beachball:check syncpack:check pr:eslint pr:prettier build:packages",
    "pr:eslint": "eslint --max-warnings 20 .",
    "pr:prep": "run-s beachball:check syncpack:fix lint:eslint lint:prettier build:packages",
    "pr:prettier": "prettier --check .",
    "publish:packages": "run-s build:packages beachball:publish",
    "purge": "git clean -d -f -X -e .env -e .husky",
    "reset": "run-s purge i build:packages",
    "start:docs": "npm run develop -w=utilities/docs",
    "start": "storybook dev -p 6006",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@griffel/react": "^1.5.17",
    "@microsoft/arbutus.aside-navigation": "1.0.5",
    "@microsoft/arbutus.bookmark-tile": "1.0.5",
    "@microsoft/arbutus.code-snippet": "1.0.4",
    "@microsoft/arbutus.command": "1.0.3",
    "@microsoft/arbutus.divider": "1.0.2",
    "@microsoft/arbutus.file-to-string": "1.0.2",
    "@microsoft/arbutus.icon": "1.0.3",
    "@microsoft/arbutus.icon-button": "1.0.5",
    "@microsoft/arbutus.link": "1.1.3",
    "@microsoft/arbutus.main-navigation": "1.0.4",
    "@microsoft/arbutus.mark-list": "1.0.5",
    "@microsoft/arbutus.recommendation-tile": "1.0.5",
    "@microsoft/arbutus.tabs": "1.0.5",
    "@microsoft/arbutus.text": "1.0.4",
    "@microsoft/arbutus.theme-switch": "1.0.3",
    "@microsoft/arbutus.theming": "1.1.0",
    "@microsoft/arbutus.tile": "1.0.4",
    "@microsoft/arbutus.ts": "0.0.2",
    "@microsoft/arbutus.use-space-styles": "1.0.5",
    "@microsoft/eslint-config-arbutus": "0.0.3",
    "@rnx-kit/eslint-plugin": "^0.5.2",
    "@storybook/addon-actions": "^7.5.3",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-webpack5": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^18.2.37",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "assert": "^2.1.0",
    "beachball": "^2.39.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "hygen": "^6.2.11",
    "lage": "^2.7.8",
    "lint-staged": "^15.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.3",
    "syncpack": "^11.2.1",
    "typescript": "^5.2.2",
    "wait-on": "7.1.0",
    "webpack": "^5.89.0"
  },
  "resolutions": {
    "**/trim": "^1.0.0"
  },
  "engines": {
    "node": "20.9.0"
  }
}
